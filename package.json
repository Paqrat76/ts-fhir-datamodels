{
  "name": "ts-fhir-datamodels",
  "private": true,
  "description": "A mono-repository for TypeScript FHIR data models inspired by HAPI FHIR",
  "keywords": [
    "node",
    "typescript",
    "generator",
    "FHIR",
    "models",
    "data models"
  ],
  "author": "Joe Paquette <paqrat76@gmail.com>",
  "homepage": "https://github.com/Paqrat76/ts-fhir-datamodels/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/Paqrat76/ts-fhir-datamodels/issues",
    "email": "paqrat76@gmail.com"
  },
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "preclean": "rm -rf tsconfig.tsbuildinfo lib coverage",
    "clean": "npm run clean --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "prettier": "npm run prettier --workspaces --if-present",
    "prettier:fix": "npm run prettier:fix --workspaces --if-present",
    "prelint": "npm run build --workspace=packages/fhir-core",
    "lint": "echo 'Please be patient!!' && eslint --ext ts --ignore-pattern './app/experiments/src/' --ignore-pattern './packages/r*-datamodels/src/' .",
    "lint:fix": "npm run lint -- --fix",
    "lint:docs": "markdownlint '**/*.md' -i '**/node_modules/**' -i '**/CHANGELOG.md' -i '**/changelog-hist/**'",
    "pretest": "npm run build --workspace=packages/fhir-core",
    "test": "npm run test --workspaces --if-present",
    "precoverage": "npm run build --workspace=packages/fhir-core",
    "coverage": "npm run coverage --workspaces --if-present",
    "jest:clear": "jest --clearCache",
    "pregenerate": "npm run build --workspace=packages/fhir-core",
    "generate": "npm run generate --workspaces --if-present",
    "typedoc:local": "typedoc",
    "posttypedoc:local": "opener ./docs-site/index.html",
    "typedoc:deploy": "./scripts/deploy-docs.sh",
    "lint:R4": "echo 'Please be patient!!' && eslint --ext ts --report-unused-disable-directives-severity off ./packages/r4-datamodels/src",
    "lint:R4B": "echo 'Please be patient!!' && eslint --ext ts --report-unused-disable-directives-severity off ./packages/r4b-datamodels/src",
    "lint:R5": "echo 'Please be patient!!' && eslint --ext ts --report-unused-disable-directives-severity off ./packages/r5-datamodels/src",
    "prepare": "husky"
  },
  "workspaces": [
    "packages/fhir-core",
    "app/generator",
    "app/generator-datamodel-ftest",
    "packages/r4-datamodels",
    "packages/r4b-datamodels",
    "packages/r5-datamodels"
  ],
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@jest/globals": "^30.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.20",
    "@types/luxon": "^3.7.1",
    "@types/node": "^24.3.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsdoc": "^54.3.1",
    "eslint-plugin-node-import": "^1.0.5",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "jest-circus": "^30.1.3",
    "lint-staged": "^16.1.6",
    "markdownlint-cli": "^0.45.0",
    "opener": "^1.5.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.12",
    "typedoc-plugin-zod": "^1.4.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "engines": {
    "node": ">=22.11",
    "npm": ">=10.9"
  },
  "lint-staged": {
    "*.{json,yaml}": "prettier --write",
    "*.md": [
      "prettier --write",
      "npm run lint:docs"
    ],
    "*.{ts,js,mjs}": [
      "prettier --write",
      "npm run lint -- --max-warnings 0 --no-warn-ignored"
    ]
  },
  "repository": "github:Paqrat76/ts-fhir-datamodels"
}
